<div class="auth_bg">
	
		<div class="logo" style="margin-top: 120px"><img src="/assets/white-logo.png"></div>
		
		<form action="<%= signin_url %>" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<input type="hidden" name="user[email]" value="user@demo.com">
			<input type="hidden" name="user[password]" value="password">
			<input class="button_demo_login" type="submit" value="Demo Account">
		</form>
	
		
		<div class="center">
						
			<div class="text">Follow the blogs you've been hearing about.<br>
			Share the things you love.</div>

			<form action="<%= users_url %>" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	
				<input type="text" class="auth_input" name="user[email]"  placeholder="Email" value="<%= @user && @user.email %>"><br>
				<input type="text" class="auth_input" name="user[password]"  placeholder="Password" value="<%= @user && @user.password %>"><br>
				<input type="text" class="auth_input" name="user[username]"  placeholder="Username" value="<%= @user && @user.username %>"><br>
				<input type="text" class="auth_input" name="user[blog_name]"  placeholder="Blog name" value="<%= @user && @user.blog_name %>"><br>
	
				<% if flash.now[:errors] %>
					<% history = [] %>
					<% flash.now[:errors].each do |key, val| %>
						<% unless history.include?(key) %>
							<div class="auth_error"><%= key.capitalize %> <%= val.first %></div>
							<% break %>
							<% history << key %>
						<% end %>
					<% end %>
				<% end %>

				<input class="auth_input auth_action" type="submit" value="Sign up">
			</form>
			
			
	</div>
	
				<a class="auth_input bottom" href="<%= login_url %>">Sign in</a>
</div>





