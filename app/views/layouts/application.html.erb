<!DOCTYPE html>
<html>
<head>
  <title>Tumblr Clone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
	<%#= flash[:main] %>
	<div id="header">
		<a href="<%= root_url %>">
			<img id="logo" src="/assets/white-logo.png" width="187px" height="40px">
		</a>
			
		<div id="user_tools">
			<nav>
				<ul>
					<li>
						<a href="<%= root_url %>">
							<img src="/assets/nav_dashboard.png">
						</a>
					</li>
					
					<li class="low_opacity">
						<!-- <a href="#"> -->
							<img src="/assets/nav_messages.png">
						<!-- </a> -->
					</li>
					
					<li class="low_opacity">
						<!-- <a href="#"> -->
							<img src="/assets/nav_faq.png">
						<!-- </a> -->
					</li>
					
					<li class="low_opacity">
						<!-- <a href="#"> -->
							<img src="/assets/nav_settings.png">
						<!-- </a> -->
					</li>
					
					<li>
						<a href="<%= signout_url %>">
							<img src="/assets/nav_signout.png">
						</a>
					</li>
				</ul>
			</nav>
		</div>
	</div>
	
	<div id="content">
		
		<div class="menu">
			<!-- Blog name and user name -->
			
			<div id="user_blog_info">
				<div id="blog_name_top"><%= current_user.blog_name %></div>
				<div id="username_top"><%= current_user.username %></div>
			</div>
			
			
			<!-- NAVIGATION -->
			<ul>
				<li>
					<a href="<%= posts_url %>">Posts</a>
				</li>
				
				<li>
					<a href="<%= followers_url %>">Followers</a>
				</li>
				
				<li>
					<a href="<%= activs_url %>">Acitivity</a>
				</li>
				
				<li>
					<a href="<%= drafts_url %>">Drafts</a>
				</li>
			</ul>
			
			<div class="menu_divider">Account</div>
			<ul>
				<li>
					<a href="<%= likes_url %>">Likes</a>
				</li>
				
				<li>
					<a href="<%= following_url %>">Following</a>
				</li>
				
				<li>
					<a href="<%= findblogs_url %>">Find blogs</a>
				</li>
			</ul>
			
			
			<!-- <a class="menu" href="<%= new_post_url %>">New Post</a><br> -->

			<div class="menu_divider">Recommended blogs</div>

			<ul>
			<% @recommended.each do |user| %>
				<li class="menu_has_follow_button">
					
					<div class="recommended_avatar"></div>
					
					<!-- BLOG INFO -->
					<div class="recommended_blogs">
						<%= user.username %><br>
						<%= user.blog_name %>
					</div>

					<!-- FOLLOW BUTTON " + " -->
					<form class="follow_button" action="follow" method="post">
						<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
						<input type="hidden" name="follower_id" value="<%= user.id %>">
						<!-- <input type="submit" value="Follow"> -->
						<button type="submit">+</button>
					</form>
					
					<div class="clearfix"></div>
				</li>
			<% end %>
			</ul>
		</div>
		
		<div id="left_column">
			
			<% if %w[/posts /drafts /likes /dashboard].include?(request.path) %>
				<div id="posts">
					<%= yield %>
				</div>
			<% else %>
				<%= yield %>
			<% end %>
			

		</div>
		
		<div class="clearfix"></div>
	</div>
</div>

</body>
</html>
